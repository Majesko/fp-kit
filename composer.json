{
  "name": "majesko/fp-kit",
  "description": "Small functional programming utilities for PHP (pipe/compose, Result, Option, Validation).",
  "type": "library",
  "license": "MIT",
  "version": "1.0.0",
  "require": {
    "php": "^8.2"
  },
  "autoload": {
    "psr-4": {
      "Majesko\\FpKit\\": "src/"
    },
    "files": [
      "src/Functions/pipe.php",
      "src/Functions/compose.php",
      "src/Functions/tap.php",
      "src/Functions/partial.php",
      "src/Functions/array.php",
      "src/Option/option.php",
      "src/Result/result.php",
      "src/Validation/validation.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Majesko\\FpKit\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.60"
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse -c phpstan.neon.dist",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "qa": [
      "@cs:check",
      "@stan",
      "@test"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
